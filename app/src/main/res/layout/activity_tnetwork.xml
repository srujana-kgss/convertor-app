<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".tnetwork">

  <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:id="@+id/tt"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/tn"/>

  <EditText
      android:background="@drawable/border"
      android:layout_width="match_parent"
      android:layout_below="@+id/tt"
      android:layout_height="40dp"
      android:paddingLeft="10dp"
      android:hint="Enter real value of ZA"
      android:id="@+id/ZArfort"
      android:textColor="@color/black"
      android:textColorHint="#7A7373"
      android:inputType="numberSigned"
      android:layout_marginTop="20dp"
      android:layout_marginLeft="10dp"
      android:layout_marginRight="10dp"/>
            <EditText
                android:background="@drawable/border"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingLeft="10dp"
                android:hint="Enter imaginary value of ZA"
                android:layout_below="@+id/ZArfort"
                android:id="@+id/ZAifort"
                android:textColor="@color/black"
                android:textColorHint="#7A7373"
                android:inputType="numberSigned"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>

  <EditText
      android:background="@drawable/border"
      android:layout_width="match_parent"
      android:layout_height="40dp"
      android:paddingLeft="10dp"
      android:hint="Enter real value of ZB"
      android:layout_below="@+id/ZAifort"
      android:id="@+id/ZBrfort"
      android:textColor="@color/black"
      android:textColorHint="#7A7373"
      android:inputType="numberSigned"
      android:layout_marginTop="20dp"
      android:layout_marginLeft="10dp"
      android:layout_marginRight="10dp"/>

            <EditText
                android:background="@drawable/border"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingLeft="10dp"
                android:hint="Enter imaginary value of ZB"
                android:layout_below="@+id/ZBrfort"
                android:id="@+id/ZBifort"
                android:textColor="@color/black"
                android:textColorHint="#7A7373"
                android:inputType="numberSigned"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>


            <EditText
      android:background="@drawable/border"
      android:layout_width="match_parent"
      android:layout_height="40dp"
      android:paddingLeft="10dp"
      android:hint="Enter real value of ZC"
      android:id="@+id/ZCrfort"
      android:textColor="@color/black"
      android:layout_below="@+id/ZBifort"
      android:textColorHint="#7A7373"
      android:inputType="numberSigned"
      android:layout_marginTop="20dp"
      android:layout_marginLeft="10dp"
      android:layout_marginRight="10dp"/>

            <EditText
                android:background="@drawable/border"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingLeft="10dp"
                android:hint="Enter imaginary value of ZC"
                android:id="@+id/ZCifort"
                android:textColor="@color/black"
                android:layout_below="@+id/ZCrfort"
                android:textColorHint="#7A7373"
                android:inputType="numberSigned"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>
  <Button
      android:id="@+id/calculatefort"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/ZCifort"
      android:layout_centerHorizontal="true"
      android:textColor="@color/white"
      android:fontFamily="@font/averia_sans_libre_light"
      android:text="CALCULATE"
      app:backgroundTint="#0277BD"/>

  <TextView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_below="@id/calculatefort"
      android:id="@+id/outputfort"
      android:fontFamily="@font/averia_sans_libre_light"
      android:text="output"
      android:textSize="24dp"
      android:textColor="@color/black"
      android:layout_marginTop="20dp"
      android:layout_marginLeft="10dp"
      android:layout_marginRight="10dp"
      android:layout_marginBottom="30dp"/>
        </RelativeLayout>
  </ScrollView>

  </RelativeLayout>